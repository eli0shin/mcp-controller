{
  "name": "mcp-controller",
  "version": "0.4.0",
  "description": "MCP server proxy that enables controlling availability of tools.",
  "type": "module",
  "bin": {
    "mcp-controller": "mcp-controller"
  },
  "files": [
    "README.md",
    "package.json",
    "bun.lock",
    "mcp-controller"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --compile --outfile mcp-controller",
    "dev": "bun run src/cli.ts",
    "typecheck": "bun tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "bun test",
    "test:watch": "bun test tests/ --watch",
    "prepublish": "bun test && bun run build"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.9.0",
    "bun-types": "^1.1.34",
    "eslint": "^9.15.0",
    "eslint-for-ai": "^1.0.8",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "zod": "^3.23.8"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "json-rpc",
    "cli"
  ],
  "author": "@eli0shin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eli0shin/mcp-controller"
  }
}
